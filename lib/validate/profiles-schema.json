{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "description": "Unique identifier of the profile",
        "$ref": "#/definitions/id"
      },
      "title": {
        "description": "Name of the profile",
        "type": "string"
      },
      "description": {
        "description": "Short description of the profile",
        "type": "string"
      },
      "url": {
        "description": "URL of a document about the profile",
        "$ref": "#/definitions/url"
      },
      "checks": {
        "description": "List of checks to be executed when validating against this profile",
        "type": "array",
        "items": {
          "$ref": "#/definitions/check"
        }
      },
      "report": {
        "description": "Whether the checks run asynchronously and a report is generated instead of directly returning the result",
        "type": "boolean",
        "default": false
      }
    },
    "required": ["id"],
    "additionalProperties": false
  },
  "definitions": {
    "id": {
      "type": "string"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "pattern": "^https?://"
    },
    "check": {
      "oneOf": [
        {
          "description": "Identifier of another profile or a build-in data format",
          "$ref": "#/definitions/id"
        },
        {
          "type": "object",
          "properties": {
            "schema": {
              "description": "Schema file or URL",
              "type": "string"
            },
            "language": {
              "description": "Schema language",
              "enum": [ "json-schema", "xsd", "schematron", "avram", "pcre" ]
            }
          }
        }
      ]
    }
  }
}
